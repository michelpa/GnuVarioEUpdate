<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}GnuVarioE{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('commun') }}
            {{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			 {% block navsection %}
 	<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
     
      <a class="navbar-brand" href="{% block hrefbrand %}/{% endblock hrefbrand %}">{% block brand %}{% endblock brand %}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        {% block navbar %}
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#">Disabled</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>
        {% endblock navbar %}
        {% block search %}
        <div id="search">
      
        </div>
        {% endblock search %}
      </div>
    </nav>
    {% endblock navsection %}
    
    {% block subnavsection %}{% endblock subnavsection %}
			{% block banner %}{% endblock %}

			{% block formg_start %}{# formg_start #}{% endblock formg_start %}

			{% block toolbar %}{% endblock %}

			<div class="{% block maincontainerclass %}container{% endblock %}">
				{% block maincontent %}
					<div class="row">
						{% block sidebar %}{% endblock sidebar %}

						<main role="main" class="{% block mainclass %}col-12{% endblock %}">
							{% block content %}{% endblock content %}
						</main>
					</div>
				{% endblock maincontent %}
				<div id="eps_popup" class="modal fade" tabindex="-1" role="dialog"></div>
			</div>

			{% block sub_content %}{% endblock sub_content %}
			{% block javascripts %}
			  	{{ encore_entry_script_tags('commun') }}
        		{{ encore_entry_script_tags('app') }}   
			{% endblock %}

			<script type="text/javascript">
				$(document).ready(function (){
					{% for key, flashs in app.session.flashbag.all() %}
					{% for flash in flashs %}
						$.notify({
							// options
							message: '{{ flash|trans()|escape('js')|raw }}' 
						},{
							// settings
							type: '{{ key }}'
						});
					{% endfor %}
					{% endfor %}
				});
			</script>

		{% block formg_end %}{# formg_end #}{% endblock formg_end %}
		{% endblock body %}
	</body>
</html>
